{
  "name": "typescript-learning-vue",
  "version": "1.0.0",
  "type": "module",
  "description": "A Vue.js project using TypeScript and Monaco Editor",
  "author": "@bon71_t",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0",
    "docker:dev": "docker-compose up --build",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "docker:logs": "docker-compose logs -f",
    "docker:shell": "docker-compose exec typescript-learning sh",
    "docker:monaco": "docker-compose exec typescript-learning npm install monaco-editor @types/monaco-editor",
    "docker:install": "docker-compose run --rm typescript-learning npm install",
    "docker:format": "docker-compose exec typescript-learning npm run format",
    "docker:lint": "docker-compose exec typescript-learning npm run lint"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "monaco-editor": "^0.44.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint-plugin-vue": "^9.0.0"
  }
}
